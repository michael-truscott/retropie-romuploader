@page "{id:int?}"
@model RetroPieRomUploader.Pages.Roms.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Rom</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Rom.ID" />
            <div class="form-group">
                <label asp-for="Rom.Title" class="control-label"></label>
                <input asp-for="Rom.Title" class="form-control" />
                <span asp-validation-for="Rom.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rom.ConsoleTypeID" class="control-label"></label>
                <select asp-for="Rom.ConsoleTypeID" asp-items="ViewData.Model.ConsoleList" class="form-control">
                </select>
                <span asp-validation-for="Rom.ConsoleTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rom.ReleaseDate" class="control-label"></label>
                <input asp-for="Rom.ReleaseDate" class="form-control" />
                <span asp-validation-for="Rom.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
