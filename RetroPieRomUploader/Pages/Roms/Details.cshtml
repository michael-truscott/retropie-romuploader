@page "{id:int?}"
@inject IRomFileManager RomFileManager
@model RetroPieRomUploader.Pages.Roms.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Rom</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rom.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rom.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rom.ConsoleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rom.ConsoleName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rom.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rom.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rom.Filename)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rom.Filename)
            @{ 
                if (!RomFileManager.RomFileExists(Model.Rom.ConsoleTypeID, Model.Rom.Filename))
                {
                    <span class="text-danger">(file missing on disk)</span>
                }
                else
                {
                    <span class="details-filesize">(@string.Format("{0:0.##} MB", ((float)Model.FileSizeBytes / 1000000)))</span>
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Rom.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
